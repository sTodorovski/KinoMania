@{
}

<body style="background-color:lightgray;"></body>

@model List<TicketShopAdminApplication.Models.Order>

<div class="container">

    <div class="row">
        <a class="btn btn-dark" asp-controller="Order" asp-action="ExportAllOrders">Export Orders</a>
    </div>

    <div class="row m-4">
        <table class="table table-bordered table-dark">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Customer Details</th>
                    <th scope="col">No. of Tickets</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for(int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];

                        <tr>
                            <th scope="row">@(i + 1)</th>
                            <td>@item.User.UserName</td>
                            <td>@item.Tickets.Count</td>
                            <td><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a></td>
                            <td><a asp-action="CreateInvoice" asp-route-id="@item.Id" class="btn btn-info">Create Invoice</a></td>
                        </tr>
                    }
            </tbody>
        </table>
    </div>
</div>