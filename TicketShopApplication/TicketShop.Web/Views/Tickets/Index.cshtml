@model List<TicketShop.Domain.DomainModels.Ticket>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body style="background-color:lightgray";></body>

<div class="container">
    <div class="l-3">
        <a class="btn btn-success" asp-controller="Tickets" asp-action="Create">Insert New Movie</a>
        <br /><br />
    </div>

       @for (int i = 0; i < Model.Count; i++)
       {
           var item = Model[i];

           if(i % 3 == 0)
           {
               @:<div class="row">
           }

        <div class="col-4">
            <div class="card" style="width: 300px; height: 900px;">
                <img class="card-img-top" src="@item.MoviePoster" style="height: 475px; width: 300px" alt="Movie Poster!">

                <div class="card-body">
                    <h4 class="card-title">@item.MovieName</h4>
                    <p class="card-text">@item.MovieDescription</p>
                    <p class="card-text">@item.Genre</p>
                    <h6>Price: @item.Price ДЕН</h6>
                </div>

                <div class="card-footer">
                    <a asp-controller="Tickets" asp-action="AddTicketToCart" asp-route-id="@item.Id" class="btn btn-info">Add to Cart</a>
                    <a asp-controller="Tickets" asp-action="Edit" asp-route-t="@item.Id" class="btn btn-secondary">Edit</a>
                </div>
            </div>
        </div>

           if(i % 3 == 2)
           {
               @:</div><br><br>
           }
       }
</div>